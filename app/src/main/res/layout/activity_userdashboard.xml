<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 🔍 Buscar -->
            <EditText
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar películas..."
                android:drawableStart="@android:drawable/ic_menu_search"
                android:padding="12dp"
                android:background="@android:drawable/editbox_background" />

            <!-- 🎭 Géneros -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:text="Acción"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:text="Comedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:text="Drama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:text="Terror"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- 📸 Banner -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerViewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"/>

            <!-- 🔥 Pelis recientes -->
            <TextView
                android:text="Nuevas Pelis ✨"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerNuevasPelis"
                android:layout_width="match_parent"
                android:layout_height="220dp"/>

            <!-- 🧩 Categorías -->
            <TextView
                android:text="Acción"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/actionRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="160dp"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />
            <Button
                android:id="@+id/btnVerMasAccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver más" />

            <TextView
                android:text="Comedia"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comediaRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="160dp"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />
            <Button
                android:id="@+id/btnVerMasComedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver más" />

            <TextView
                android:text="Drama"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dramaRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="160dp"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />
            <Button
                android:id="@+id/btnVerMasDrama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver más" />

            <TextView
                android:text="Terror"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/terrorRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="160dp"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />
            <Button
                android:id="@+id/btnVerMasTerror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver más" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerrar Sesión"
                android:background="#E50914"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>